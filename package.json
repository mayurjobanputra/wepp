{
  "name": "wepp",
  "version": "0.0.1",
  "description": "Convert images to WebP on MacOS.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-packager . wepp --platform=mas --icon=./build/icon.icns --production --overwrite"
  },
  "repository": "https://github.com/fabe/wepp",
  "author": "Fabian Schultz",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "sharp": "^0.33.1"
  }
}
